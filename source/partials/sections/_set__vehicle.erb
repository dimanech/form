						<option value="2002">2002</option>
						<option value="2001">2001</option>
						<option value="2000">2000</option>
						<option value="1999">1999</option>
						<option value="1998">1998</option>
						<option value="1997">1997</option>
						<option value="1996">1996</option>
						<option value="1995">1995</option>
						<option value="1994">1994</option>
						<option value="1993">1993</option>
						<option value="1992">1992</option>
						<option value="1991">1991</option>
					</select>
				</td>
				<td>
					<div class="l-form__row">
						<input type="text" id="vehicle__<%= field.number %>__sum" name="vehicle__<%= field.number %>__sum" placeholder="Сума витрат" data-inp-act="hidden,unclear" />
					</div>
					<div class="l-form__row">
						<textarea id="vehicle__<%= field.number %>__sum_comment" name="vehicle__<%= field.number %>__sum_comment" placeholder="Коментар" data-inp-act="hidden,unclear"></textarea>
					</div>
				</td>
				<td>
					<div class="l-form__row">
						<input type="text" id="vehicle__<%= field.number %>__sum_rent" name="vehicle__<%= field.number %>__sum_rent" placeholder="Сума витрат оренда" data-inp-act="hidden,unclear" />
					</div>
					<div class="l-form__row">
